				"parameters": {
					"containername": {
						"type": "string"
					},
					"source": {
						"type": "string"
					},
					"sink": {
						"type": "string"
					}
				},
				"variables": {
					"var1": {
						"type": "String"
					}
				},
				"annotations": []
			},
			"dependsOn": []
		},
